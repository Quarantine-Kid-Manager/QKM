
    <form action="/logout?_method=DELETE" method="POST">
        <button type="submit">Log Out</button>
    </form>

    <div class="container-fluid">

        <h1>QKM</h1>
        <h5>Quarantine Kids Manager</h5>
        

        <div class="row">
            <div class="col-lg-12">
               
            </div>
                <p>First time user? Introduce us to your kids!</p>
                <form class="kidinput"> 
	              <input type="text" name="title" id="title" placeholder="What's your kid's name?">
	              <button type="submit" class="submit-newKid">Add</button>
                </form>
            </div>

        <div class="row">
            <div class="col-lg-12">
                <div id="timed-hw">
              <h2>Your Kids</h2>
             <ul>
              {{#each Users.Kids}}
                <li>
                  <a href="/user/{{User.dataValues.id}}/kid/{{User.Kids.dataValues.id}}">  
                  <p>{{dataValues.title}}</p>  
                  </a>
               </li>
              {{/each}}
            </ul>
            </div>
        </div>
    </div>


    <footer>keep those kids in line</footer>

    <script>
      $(function() {
      $(".submit-newKid").on("click", function(event){
          event.preventDefault()
          var title = $("#title").val().trim()
        $.post("/api/user/" + {{UserId}} + "/kids",{
            title: title
        },function(data) {
        window.location = "/user/" + {{UserId}} + "/kid/" + data.id;
      });
      return true;
      });
    }); 
    </script>

